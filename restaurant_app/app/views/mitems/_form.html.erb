<%= form_for @mitem do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.number_field :price, min: 0, step: 0.01 %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :desc %>
  <%= f.text_field :desc %>
  <br>
  <%= f.submit %>
<% end %>
