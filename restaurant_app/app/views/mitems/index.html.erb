<!-- THIS IS MENUITEMS PAGE -->
<div class="container">
  <% if User.find(session[:current_user_id]).role == "admin" %>
  <h1 class="stitle">Admin Panel for <%= User.find(session[:current_user_id]).name %></h1>
  <p class="stitle">
    <%= link_to "Logout", sessions_path, method: :delete %> ||
    <%= link_to "Main", admins_path %>
  </p>
  <div class="new" style="text-align: center">
    <h3><%= link_to "Add new menu item", new_mitem_path %></h3>
  </div>
  <div class="all">
    <%= render @mitems %>
  </div>
  <% else %>
  <h1>Access denied...</h1>
  <% end %>
</div>
