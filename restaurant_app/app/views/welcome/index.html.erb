<div class="container mainscreen">
  <h1 class="AppTitle">RESTaurant App</h1>
  <p>You need to be logged in to access this app.</p>
  <p>If you're new and/or need access, consult with your manager.</p>
  <div class="login">
    <% if session[:current_user_id] %>
    <%= link_to "#{User.find(session[:current_user_id]).name}", user_path(session[:current_user_id]) %> ||
    <%= link_to "logout", sessions_path, method: :delete %>
    <% else %>
    <%= form_tag(sessions_path) do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br><br>
    <%= submit_tag "Login" %>
    <% end %>
    <% end %>
  </div>

</div>
